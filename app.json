{
  "expo": {
    "name": "POCHOCLO",
    "slug": "POCHOCLO",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FAFAF9"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "POCHOCLO needs access to your camera to take profile photos.",
        "NSPhotoLibraryUsageDescription": "POCHOCLO needs access to your photo library to choose a profile picture."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FAFAF9"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.fedeostan.POCHOCLO"
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#6B8E7B"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "pochoclo",
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "POCHOCLO needs access to your photo library to choose a profile picture.",
          "cameraPermission": "POCHOCLO needs access to your camera to take profile photos."
        }
      ],
      "expo-web-browser",
      "expo-sqlite"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "5d079c58-50ca-4f12-8197-a202f856996b"
      }
    }
  }
}
